{
  "variables": {
    "image_version": ""
  },
  "builders": [
    {
      "type": "googlecompute",
      "project_id": "dstack",
      "source_image": "dstack-a3mega-20250401t065024z",
      "image_name": "dstack-a3mega-{{user `image_version`}}",
      "instance_name": "dstack-a3mega-{{user `image_version`}}",
