{
  "variables": {
    "build_id": "{{timestamp}}",
    "build_prefix": "stgn-",
    "docker_version": "20.10.17",
    "dstack_stage": "STGN"
  },
  "builders": [
    {
      "type": "googlecompute",
      "project_id": "dstack",
      "source_image": "ubuntu-2204-jammy-v20230714",
      "image_name": "{{user `build_prefix`}}dstack-cuda-{{user `build_id`}}",
      "instance_name": "{{user `build_prefix`}}dstack-cuda-{{user `build_id`}}",
      "ssh_username": "ubuntu",
      "zone": "us-central1-a"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": ["cloud-init status --long --wait"]
    },
    {
      "type": "shell",
      "scripts": [
        "provisioners/kernel/apt-upgrade.sh",
        "provisioners/kernel/apt-daily.sh",
        "provisioners/kernel/apt-packages.sh",
        "provisioners/kernel/kernel-tuning.sh"
      ]
    },
    {
      "type": "file",
      "source": "provisioners/install-docker.sh",
      "destination": "/tmp/install-docker.sh"
    },
    {
      "type": "file",
      "source": "provisioners/run-docker",
      "destination": "/tmp/run-docker"
    },
    {
      "type": "shell",
      "inline": [
        "cd /tmp",
        "chmod +x install-docker.sh",
        "./install-docker.sh --version {{user `docker_version`}}"]
    },
    {
      "type": "shell",
      "environment_vars": ["CUDA_DRIVERS_VERSION=535.54.03"],
      "script": "provisioners/cuda.sh"
    },
    {
      "type": "shell",
      "environment_vars": ["IMAGE_VERSION={{user `image_version`}}"],
      "script": "provisioners/docker-image-with-cuda.sh"
    }
  ]
}
